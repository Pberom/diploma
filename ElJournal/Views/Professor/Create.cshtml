@model ElJournal.Professor
@{
    ViewBag.Title = "Create";
}
<style>
    .btn {
        margin-bottom: 10px;
    }

    .col {
        margin-bottom: 10px;
    }
</style>

<h2>Внесение преподавателя в реестр</h2>

<body class="d-flex h-100 text-bg-dark">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Преподаватель</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(model => model.F, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.F, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.F, "", new { @class = "text-danger" })
                <p>Фамилия преподавателя</p>
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.I, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.I, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.I, "", new { @class = "text-danger" })
                <p>Имя преподавателя</p>
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.O, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.O, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.O, "", new { @class = "text-danger" })
                <p>Отчество (при наличии)</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить педагога" class="btn btn-light" />
            </div>
        </div>
    </div>
    }

<div>

    <button type="button" class="btn btn-light m-lg-1 mb-1">@Html.ActionLink("Вернуться на предыдущую страницу", "Index")</button>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    </body>