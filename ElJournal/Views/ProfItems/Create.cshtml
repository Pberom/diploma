@model ElJournal.ProfessorsItem

@{
    ViewBag.Title = "Созданине зависимости педагог-предмет";
}

<style>
    .btn {
        margin-bottom: 10px;
    }

    .col {
        margin-bottom: 10px;
    }
</style>

<h2>Созданине зависимости педагог-предмет</h2>


<body class="d-flex h-100 text-bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Назначение педагогов</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
                    @*@Html.LabelFor(model => model.ProfessorId, "ProfessorId", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @Html.DropDownList("ProfessorId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProfessorId, "", new { @class = "text-danger" })
                        <p>Фамилия преподавателя</p>
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.ItemId, "ItemId", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @Html.DropDownList("ItemId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ItemId, "", new { @class = "text-danger" })
                        <p>Наименование предмета </p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Создать зависимость" class="btn btn-light" />
                    </div>
                </div>
            </div>
        }
        <div>
            <button type="button" class="btn btn-light">@Html.ActionLink("Вернуться в список", "Index")</button>
        </div>
    </div>
</body>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
