@model ElJournal.Models.IndexViewModel
@using Microsoft.AspNet.Identity

@*@model IEnumerable<ElJournal.AspNetUsers>*@
@{
    ViewBag.Title = "Управление";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>

    <p class="text-success">@ViewBag.StatusMessage</p>
    <div>
        <h4>Добро пожаловать в Вашу учётную запись!</h4>
        <h5>Давайте рассмотрим Ваши персональные данные, которые вы указали.</h5>
        <hr />
        <dl class="dl-horizontal">
            <dt>Пароль:</dt>
            <dd>
                [
                @if (Model.HasPassword)
                {
                    @Html.ActionLink("Смена пароля", "ChangePassword")
                }
                else
                {
                    @Html.ActionLink("Создать", "SetPassword")
                }
                ]
            </dd>

            <dt>Почта:</dt>
            <dd> @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })</dd>
        </dl>
    </div>
</main>